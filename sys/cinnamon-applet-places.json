{
    "layout": {
        "type": "layout",
        "pages": [
            "generalPage",
            "userPage",
            "systemPage",
            "recentPage"
        ],
        "generalPage": {
            "type": "page",
            "title": "General",
            "sections": [
                "panel",
                "menu"
            ]
        },
        "userPage": {
            "type": "page",
            "title": "User",
            "sections": [
                "userSection"
            ]
        },
        "systemPage": {
            "type": "page",
            "title": "System",
            "sections": [
                "systemSection"
            ]
        },
        "recentPage": {
            "type": "page",
            "title": "Recent documents",
            "sections": [
                "recentSection"
            ]
        },
        "panel": {
            "type": "section",
            "title": "Panel settings",
            "keys": [
                "panelIcon",
                "panelText",
                "middleClickPath"
            ]
        },
        "menu": {
            "type": "section",
            "title": "Menu settings",
            "keys": [
                "keyOpen",
                "iconSize"
            ]
        },
        "userSection": {
            "type": "section",
            "title": "User section",
            "keys": [
                "showDesktop",
                "showTrash",
                "userCustomPlaces"
            ]
        },
        "systemSection": {
            "type": "section",
            "title": "System section",
            "keys": [
                "showComputer",
                "showRoot",
                "showVolumes",
                "onlyShowMounted",
                "showNetwork",
                "systemCustomPlaces"
            ]
        },
        "recentSection": {
            "type": "section",
            "title": "Recent documents",
            "keys": [
                "showRecentDocuments",
                "recentSizeLimit",
                "btnPrivacy"
            ]
        }
    },
    "panelIcon": {
        "type": "iconfilechooser",
        "description": "Panel icon",
        "default": "folder",
        "tooltip": "Accepts icon name or direct path (supports symbolic icons)",
        "value": "folder"
    },
    "panelText": {
        "type": "entry",
        "description": "Panel text",
        "default": "",
        "value": "~"
    },
    "keyOpen": {
        "type": "keybinding",
        "description": "Menu shortcut key",
        "default": "<Super>p",
        "value": "<Super>p"
    },
    "iconSize": {
        "type": "spinbutton",
        "default": 20,
        "min": 10,
        "max": 50,
        "units": "px",
        "step": 2,
        "description": "Menu icon size",
        "value": 20
    },
    "middleClickPath": {
        "type": "filechooser",
        "description": "Open on middle click",
        "default": "~/",
        "select-dir": true,
        "tooltip": "Leave blank to disable",
        "value": "~/"
    },
    "showDesktop": {
        "type": "checkbox",
        "description": "Show desktop",
        "default": true,
        "value": false
    },
    "userCustomPlaces": {
        "type": "textview",
        "description": "Custom places",
        "default": "",
        "height": 50,
        "tooltip": "List of uris/file paths to be included. Entries may be separated by either a comma(,) or by a new-line. You can set the name to be displayed by adding :customName after the location. You can likewise set an icon name by adding :iconName after the custom name.",
        "value": ""
    },
    "showTrash": {
        "type": "combobox",
        "description": "Show trash",
        "default": 2,
        "options": {
            "Never": 0,
            "Always": 1,
            "When not empty": 2
        },
        "value": 2
    },
    "showComputer": {
        "type": "checkbox",
        "description": "Show computer",
        "default": true,
        "value": true
    },
    "showRoot": {
        "type": "checkbox",
        "description": "Show file system",
        "default": true,
        "value": true
    },
    "showVolumes": {
        "type": "checkbox",
        "description": "Show volumes",
        "default": true,
        "value": true
    },
    "onlyShowMounted": {
        "type": "checkbox",
        "description": "Only show mounted drives",
        "default": false,
        "indent": true,
        "dependency": "showVolumes",
        "value": false
    },
    "showNetwork": {
        "type": "checkbox",
        "description": "Show network",
        "default": true,
        "value": true
    },
    "systemCustomPlaces": {
        "type": "textview",
        "description": "Custom places",
        "default": "",
        "height": 50,
        "tooltip": "List of uris/file paths to be included. Entries may be separated by either a comma(,) or by a new-line. You can set the name to be displayed by adding :customName after the location. You can likewise set an icon name by adding :iconName after the custom name.",
        "value": ""
    },
    "showRecentDocuments": {
        "type": "checkbox",
        "description": "Show recent documents",
        "default": false,
        "value": true
    },
    "recentSizeLimit": {
        "type": "combobox",
        "default": 10,
        "options": {
            "5": 5,
            "10": 10,
            "15": 15,
            "20": 20,
            "25": 25,
            "30": 30,
            "All Recent Documents": 0
        },
        "description": "Number to show",
        "indent": true,
        "dependency": "showRecentDocuments",
        "value": 10
    },
    "btnPrivacy": {
        "type": "button",
        "description": "Privacy",
        "callback": "on_btnPrivacy_pressed"
    },
    "__md5__": "3a09be77b9725c82b23c365d2343a6af"
}